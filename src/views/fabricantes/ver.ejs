<%- include("../partials/header"); %>
<div class="col-12">
    <br>
    <br>
    <br>
    <h1>Listado de fabricantes</h1>
	<br>
	<div class="input-group">
	   <span class="input-group-addon">Buscar &nbsp;</span>
       <input id="filtrar" type="text" class="form-control" placeholder="Ingresa el Nombre o Cédula del fabricante que deseas buscar...">
	</div>
	<br>
    <a href="/fabricantes/agregar" class="btn btn-primary mb-2">Agregar</a>
    <table class="table table-bordered">
        <thead>
            <tr>
			    <th>Rif</th>
                <th>Nombre</th>
				<th>Teléfono</th>
				<th>Dirección</th>
				<th>Contacto</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody class="buscar">
            <% fabricantes.forEach(fabricante => { %>
            <tr>
                <td><%= fabricante.rif %></td>
				<td><%= fabricante.nombre %></td>
				<td><%= fabricante.telefono %></td>
                <td><%= fabricante.direccion %></td>
				<td><%= fabricante.contacto %></td>
                <td>
                    <a href="/fabricantes/editar/<%= fabricante.id %>" class="btn btn-warning">
                        Editar
                    </a>
                </td>
                <td>
                    <a href="/fabricantes/eliminar/<%= fabricante.id %>" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
            <% })%>
        </tbody>
    </table>
</div>
<%- include("../partials/footer"); %>