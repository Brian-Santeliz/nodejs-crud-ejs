<%- include("../partials/header"); %>
<div class="col-12">
    <br>
    <br>
    <br>
    <h1>Editar fabricantes</h1>
    <form method="POST" action="/fabricantes/actualizar?_method=PUT">
        <input value="<%= fabricante.id %>" name="id" type="hidden">
		<div class="form-group">
            <label for="rif">Rif</label>
            <input value="<%= fabricante.rif %>" required id="rif" placeholder="Rif del fabricante"
                class="form-control" type="text" name="rif" disabled>
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= fabricante.nombre %>" required id="nombre" placeholder="Nombre del fabricante"
                class="form-control" type="text" name="nombre">
        </div>
		<div class="form-group">
            <label for="telefono">Teléfono</label>
            <input value="<%= fabricante.telefono %>" required id="telefono" placeholder="Telefono del fabricante"
                class="form-control" type="text" name="telefono">
        </div>
		<div class="form-group">
            <label for="direccion">Dirección</label>
            <input value="<%= fabricante.direccion %>" required id="direccion" placeholder="Dirección del fabricante"
                class="form-control" type="text" name="direccion">
        </div>
		<div class="form-group">
            <label for="contacto">Contacto</label>
            <input value="<%= fabricante.contacto %>" required id="contacto" placeholder="Nombre del contacto"
                class="form-control" type="text" name="contacto">
        </div>
        
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/fabricantes" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../partials/footer"); %>