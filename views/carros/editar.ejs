<%- include("../header"); %>
<div class="col-12">
    <br>
    <br>
    <br>
    <h1>Editar carro</h1>
    <form method="post" action="/carros/actualizar">

        <input value="<%= carro.id %>" name="id" type="hidden">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= carro.nombre %>" required id="nombre" placeholder="Nombre del carro"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="año">Año</label>
            <input value="<%= carro.año %>" required id="año" placeholder="Año del carro"
                class="form-control" type="text" name="año">
        </div>
		<div class="form-group">
            <label for="marca">Marca</label>
            <input value="<%= carro.marca %>" required id="marca" placeholder="Marca del carro"
                class="form-control" type="text" name="marca">
        </div>
		<div class="form-group">
            <label for="especificaciones">Especificaciones</label>
            <input value="<%= carro.especificaciones %>" required id="especificaciones" placeholder="Especificaciones del carro"
                class="form-control" type="text" name="especificaciones">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input value="<%= carro.precio %>" required id="precio" placeholder="Precio del carro
                class="form-control" type="number" name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/carros" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>