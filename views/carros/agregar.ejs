<%- include("../header"); %>
<div class="col-12">
    <br>
    <br>
    <br>
    <h1>Agregar carro</h1>
    <form method="post" action="/carros/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Nombre del carro" class="form-control" type="text"
                name="nombre">
        </div>
        <div class="form-group">
            <label for="año">Año</label>
            <input required id="año" placeholder="Año del carro" class="form-control" type="text"
                name="año">
        </div>
		<div class="form-group">
            <label for="marca">Marca</label>
            <select class="form-control" required>
                <option>--Seleciona una opcion--</option>
                <% fabricantes.forEach(fabricante => { %>
                <option  required value="<%= fabricante.id %>"><%= fabricante.nombre %></option>
                <%}) %>
            </select>
        </div>
		<div class="form-group">
            <label for="especificaciones">Especificaciones</label>
            <input required id="especificaciones" placeholder="Especificaciones del carro" class="form-control" type="text"
                name="especificaciones">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input required id="precio" placeholder="Precio del carro" class="form-control" type="number"
                name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/carros" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>